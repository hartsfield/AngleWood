  display: inline-flex;
}
.galButtInner {
      position: relative;
  left: 50%;
  top: 75%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
      user-select: none;
}
.galButt {
  width: 65%;
  background: black;
  color: white;
  display: inline-flex;
  font-size: 2em;
}
.selectedPic {
      height: 100%;
    text-align: center;
}
